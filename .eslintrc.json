{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "ignorePatterns": ["mochawesome-report/"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", "tab", { "SwitchCase": 1 }],
        "linebreak-style": ["error", "windows"],
        "no-tabs": 0,
        "max-len": 0,
        "no-invalid-this": 0,
        "new-cap": 0,
        "one-var-declaration-per-line": ["error", "always"],
        "comma-dangle": ["error", "never"]
    }
}
