<html lang="en">
    <head>
        <meta charset = "utf-8">
        <meta name = "viewport" content = "width=device-width, initial-scale=1">
        <title>View More Info Transaction</title>

        <link href = "https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel = "stylesheet">       
        <link href = "https://fonts.googleapis.com/css2?family=Bungee&family=Montserrat:wght@500&display=swap" rel = "stylesheet">
        <link href = "/css/style.css" rel = "stylesheet">

        <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src = "/js/more-info-transaction.js" type = "module"></script>
    </head>
    <body class = "bg-home">
        <!-- as of now, its set to non-admin ung nav, but admin should be included -->
        {{>navbar adminflag = false home-page = true account-page = false}}

        <div class = "mx-5 my-4"> 
            <a href = "/getTransaction" class = "btn btn-primary fw-bold float-start px-5 rounded-pill shadow-sm text-white">Go Back</a>
        </div> 
        <br>
        <br>

        <div class = "bg-light border border-primary border-5 mt-3 mx-5 table-block table-responsive">
            <table class = "align-middle table table-borderless">
                <thead class = "bg-primary table-fixed table-header text-primary">
                    <th scope = "col" class = "w-50">MORE INFO TRANSACTION</th>
                    <th scope = "col" class = "w-50">MORE INFO TRANSACTION</th>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class = "m-4">
                                <label for = "more-info-transaction-id" class = "form-label fw-bold text-primary">Transaction ID</label>
                                <input id = "more-info-transaction-id" name = "moreInfoTransactionId" type = "text" placeholder = "Transaction ID" value = "{{id}}" class = "form-control p-2 rounded-pill" readonly = "readonly">
                            </div>

                            <div class = "m-4">
                                <label for = "more-info-transaction-status" class = "form-label fw-bold text-primary">Status</label>
                                <input id = "more-info-transaction-status" name = "moreInfoTransactionStatus" type = "text" placeholder = "Status" value = "{{getStatusString status}}" class = "form-control p-2 rounded-pill" readonly = "readonly">
                            </div>

                            <div class = "m-4">
                                <label for = "more-info-transaction-customer-name" class = "form-label fw-bold text-primary">Customer Name</label>
                                <input id = "more-info-transaction-customer-name" name = "moreInfoTransactionCustomerName" type = "text" placeholder = "Customer Name" value = "{{customer}}" class = "form-control p-2 rounded-pill" readonly = "readonly">
                            </div>

                            <div class = "m-4">
                                <label for = "more-info-transaction-customer-number" class = "form-label fw-bold text-primary">Customer Phone Number</label>
                                <input id = "more-info-transaction-customer-number" name = "moreInfoTransactionCustomerNumber" type = "number" placeholder = "Customer Phone Number" value = "{{number}}" class = "form-control p-2 rounded-pill" readonly = "readonly">
                            </div>

                            <div class = "m-4">
                                <label for = "more-info-transaction-date" class = "form-label fw-bold text-primary">Transaction Date</label>
                                <input id = "more-info-transaction-date" name = "moreInfoTransactionDate" type = "date" class = "form-control p-2 rounded-pill" value = "{{date}}" readonly = "readonly">
                            </div>

                            <div class = "m-4 prices">
                                <label for = "more-info-transaction-amount" class = "form-label fw-bold text-primary">Amount</label>
                                <input id = "more-info-transaction-amount" name = "moreInfoTransactionAmount" type = "text" placeholder = "Total Amount" value = "{{total}}" class = "form-control p-2 rounded-pill" readonly = "readonly">
                            </div>
                        </td>
                
                        <td>
                            <div class = "bg-secondary border border-primary border-5 mt-2 me-1 table-responsive">
                                <table class = "align-middle text-center table table-borderless">
